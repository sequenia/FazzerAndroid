<resources>

    <style name="FazzerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/main_bg_color</item>
        <item name="android:colorBackground">@color/main_bg_color</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/green_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/additional_font_size</item>
    </style>

    <style name="ButtonSize">
        <item name="android:layout_margin">@dimen/btn_margin</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/additional_font_size</item>
        <item name="android:textColor">#686868</item>
        <item name="android:textColorHint">#cfcfcf</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="EditTextLabel">
        <item name="android:textSize">@dimen/edit_text_label_font_size</item>
        <item name="android:textColor">#a5a5a5</item>
    </style>

    <style name="InputLogo">
        <item name="android:layout_width">@dimen/input_logo_size</item>
        <item name="android:layout_height">@dimen/input_logo_size</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <!-- asdasdasdasdadsa -->

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AdvertLabel" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AdvertInfoLabel">
        <item name="android:textColor">#999999</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="AdvertInfo">
        <item name="android:textColor">#444444</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="AdvertFullInfo">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

</resources>
