<resources>

    <style name="FazzerTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/main_bg_color</item>
        <item name="android:colorBackground">@color/main_bg_color</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:textViewStyle">@style/Text</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/main_bg_color</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/green_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/additional_font_size</item>
    </style>

    <style name="ButtonSize">
        <item name="android:layout_margin">@dimen/btn_margin</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/additional_font_size</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textColorHint">#cfcfcf</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="SearchEditText" parent="EditText">
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/edit_text_label_font_size</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="DialogElemText" parent="Text">
        <item name="android:textSize">@dimen/additional_font_size</item>
    </style>

    <style name="EditTextLabel">
        <item name="android:textSize">@dimen/edit_text_label_font_size</item>
        <item name="android:textColor">@color/edit_text_label_color</item>
    </style>

    <style name="InputLogo">
        <item name="android:layout_width">@dimen/input_logo_size</item>
        <item name="android:layout_height">@dimen/input_logo_size</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

</resources>
