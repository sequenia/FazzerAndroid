<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/keyline_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.sequenia.fazzer.widgets.RobotoRegularTextView
            style="@style/EditTextLabel"
            android:textSize="@dimen/additional_font_size"
            android:text="@string/plus7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>

        <com.sequenia.fazzer.widgets.RobotoRegularEditText
            android:id="@+id/userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/phone"
            android:inputType="number">

        </com.sequenia.fazzer.widgets.RobotoRegularEditText>

    </LinearLayout>

    <com.sequenia.fazzer.widgets.RobotoRegularButton
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/ButtonSize"
        android:text="@string/send_code"/>

</LinearLayout>