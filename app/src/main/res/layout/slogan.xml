<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/search_logo_size"
        android:layout_height="@dimen/search_logo_size"
        android:padding="@dimen/search_logo_padding"
        android:layout_marginTop="@dimen/search_logo_margin_top"
        android:layout_marginBottom="@dimen/search_logo_margin_bottom"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:src="@drawable/search"
        android:background="@drawable/yellow_circle"/>

    <com.sequenia.fazzer.widgets.TypefacedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name_caps"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="@color/white"
        custom:my_typeface="Roboto-Bold.ttf"/>

    <com.sequenia.fazzer.widgets.TypefacedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slogan"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        custom:my_typeface="Roboto-Light.ttf"/>

</LinearLayout>